stefangasser.com, www.stefangasser.com {
	# Redirect www to non-www
	@www host www.stefangasser.com
	redir @www https://stefangasser.com{uri} permanent

	# Compression
	encode zstd gzip

	# Cache OG images (1 year - they're immutable per slug)
	@og path /og/*
	header @og Cache-Control "public, max-age=31536000, immutable"

	# Cache static assets (1 year)
	@static {
		path *.jpg *.jpeg *.png *.webp *.gif *.ico *.css *.js *.woff *.woff2 *.svg
		not path /og/*
	}
	header @static Cache-Control "public, max-age=31536000, immutable"

	# Cache HTML (1 hour)
	@html {
		path *.html /
		not path /og/*
	}
	header @html Cache-Control "public, max-age=3600"

	# Security headers
	header {
		X-Frame-Options "SAMEORIGIN"
		X-Content-Type-Options "nosniff"
		X-XSS-Protection "1; mode=block"
		Referrer-Policy "strict-origin-when-cross-origin"
		Permissions-Policy "camera=(), microphone=(), geolocation=()"
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
	}

	# Reverse proxy to Astro Node server
	reverse_proxy astro:4321
}
