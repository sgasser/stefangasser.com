---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import EmailLink from "../components/EmailLink.astro";
---

<Layout title="Impressum – Stefan Gasser">
  <Header />

  <main>
    <article
      class="mx-auto max-w-3xl px-6 pt-8 pb-16 lg:px-8 lg:pt-12 lg:pb-24"
    >
      <PageHeader title="Impressum" />

      <div class="mt-12 space-y-8 text-gray-600">
        <section>
          <h2 class="text-xl font-semibold text-gray-800">
            Angaben gemäß D.Lgs. 70/2003
          </h2>
          <div class="mt-4 space-y-1">
            <p>Stefan Gasser</p>
            <p>Steurerweg 14/C</p>
            <p>39018 Terlan (BZ), Italien</p>
            <p class="mt-2">Steuernummer: GSSSFN88E22A952H</p>
          </div>
        </section>

        <section>
          <h2 class="text-xl font-semibold text-gray-800">Kontakt</h2>
          <div class="mt-4 space-y-1">
            <p class="flex items-center gap-2">
              E-Mail: <EmailLink showIcon={false} />
            </p>
          </div>
        </section>

        <section>
          <h2 class="text-xl font-semibold text-gray-800">
            Haftungsausschluss
          </h2>
          <div class="mt-4 space-y-4">
            <div>
              <h3 class="font-medium text-gray-800">Haftung für Inhalte</h3>
              <p class="mt-2">
                Die Inhalte dieser Seiten wurden mit größter Sorgfalt erstellt.
                Für die Richtigkeit, Vollständigkeit und Aktualität der Inhalte
                kann jedoch keine Gewähr übernommen werden.
              </p>
            </div>
            <div>
              <h3 class="font-medium text-gray-800">Haftung für Links</h3>
              <p class="mt-2">
                Diese Website enthält Links zu externen Webseiten Dritter, auf
                deren Inhalte kein Einfluss besteht. Für die Inhalte der
                verlinkten Seiten ist stets der jeweilige Anbieter
                verantwortlich.
              </p>
            </div>
          </div>
        </section>
      </div>
    </article>
  </main>

  <Footer />
</Layout>
