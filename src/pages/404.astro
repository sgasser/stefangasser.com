---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Seite nicht gefunden â€“ Stefan Gasser">
  <Header />

  <main>
    <section class="mx-auto max-w-3xl px-6 py-16 lg:px-8 lg:py-24 text-center">
      <p class="text-6xl font-bold text-primary-500">404</p>
      <h1
        class="mt-4 text-3xl font-bold tracking-tight text-gray-800 sm:text-4xl"
      >
        Seite nicht gefunden
      </h1>
      <p class="mt-6 text-lg text-gray-600">
        Die gesuchte Seite existiert leider nicht.
      </p>
      <a
        href="/"
        class="mt-8 inline-flex items-center gap-2 rounded-full bg-primary-600 px-6 py-3 text-sm font-semibold text-white shadow-sm transition-all hover:bg-primary-700 hover:shadow-md"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="h-4 w-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
        </svg>
        Zur Startseite
      </a>
    </section>
  </main>

  <Footer />
</Layout>
