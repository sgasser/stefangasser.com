---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import LinkedIn from "../../components/icons/LinkedIn.astro";
import { socialLinks } from "../../data/social";
---

<Layout
  title="Blog – Stefan Gasser"
  description="Artikel über KI, Automatisierung und Software-Entwicklung."
>
  <Header />

  <main>
    <section
      class="mx-auto max-w-3xl px-6 pt-8 pb-16 lg:px-8 lg:pt-12 lg:pb-24"
    >
      <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl">
        Blog
      </h1>

      <p class="mt-6 text-xl text-gray-600 leading-relaxed">
        Artikel über KI, Automatisierung und Software-Entwicklung.
      </p>

      <div class="mt-12 rounded-2xl bg-primary-50 p-8 sm:p-12">
        <p class="text-xl text-gray-700">
          Hier entstehen bald Artikel über KI, Automatisierung und
          Software-Entwicklung.
        </p>
        <p class="mt-4 text-gray-600 flex items-center gap-2">
          Folge mir auf
          <a
            href={socialLinks.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 text-primary-700 hover:text-primary-800 font-medium"
          >
            <LinkedIn class="h-4 w-4" />
            LinkedIn
          </a>
          um keine Updates zu verpassen.
        </p>
      </div>

      <!-- Future articles will be listed here -->
      <!--
      <div class="mt-12 space-y-12">
        <article class="group">
          <a href="/blog/artikel-slug" class="block">
            <time datetime="2025-01-01" class="text-sm text-gray-600">1. Januar 2025</time>
            <h2 class="mt-2 text-xl font-semibold text-gray-800 group-hover:text-primary-700 transition-colors">
              Artikel Titel
            </h2>
            <p class="mt-2 text-gray-600">
              Kurze Beschreibung des Artikels...
            </p>
          </a>
        </article>
      </div>
      -->
    </section>
  </main>

  <Footer />
</Layout>
