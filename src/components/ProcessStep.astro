---
interface Props {
  number: number;
  title: string;
  description: string;
  optional?: boolean;
}

const { number, title, description, optional = false } = Astro.props;
---

<div class="flex gap-4">
  <div
    class:list={[
      "flex h-8 w-8 shrink-0 items-center justify-center rounded-full text-sm font-semibold",
      optional ? "bg-gray-200 text-gray-600" : "bg-primary-600 text-white",
    ]}
  >
    {number}
  </div>
  <div>
    <h3 class="text-lg font-semibold text-gray-800">
      {title}
      {
        optional && (
          <span class="text-sm font-normal text-gray-600">(optional)</span>
        )
      }
    </h3>
    <p class="mt-1 text-gray-600">
      {description}
    </p>
  </div>
</div>
