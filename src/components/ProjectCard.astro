---
import { ArrowRight } from "lucide-astro";

interface Props {
  title: string;
  description: string;
  details: string[];
  link?: {
    href: string;
    text: string;
  };
}

const { title, description, details, link } = Astro.props;
---

<div
  class="flex h-full flex-col rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-100 transition-all hover:shadow-md"
>
  <h3 class="text-lg font-semibold text-gray-800">{title}</h3>
  <p class="mt-2 text-gray-600">{description}</p>
  <ul class="mt-4 flex-grow space-y-1">
    {details.map((detail) => <li class="text-sm text-gray-600">{detail}</li>)}
  </ul>
  {
    link && (
      <a
        href={link.href}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-4 inline-flex items-center gap-1 text-sm font-medium text-primary-700 hover:text-primary-800 transition-colors"
      >
        {link.text}
        <ArrowRight class="h-4 w-4" />
      </a>
    )
  }
</div>
