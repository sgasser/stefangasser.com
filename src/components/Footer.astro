---
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import { socialLinks } from "../data/social";

const currentYear = new Date().getFullYear();

const navigation = [
  { name: "Über\u00A0mich", href: "/ueber-mich" },
  { name: "Blog", href: "/blog" },
  { name: "Leistungen", href: "/leistungen" },
  { name: "English", href: "/english" },
  { name: "Impressum", href: "/impressum" },
  { name: "Datenschutz", href: "/datenschutz" },
];
---

<footer class="mt-24 border-t border-gray-100">
  <div class="mx-auto max-w-5xl px-6 py-12 lg:px-8">
    <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2 mb-8">
      {
        navigation.map((item) => (
          <a
            href={item.href}
            class="text-sm text-gray-600 hover:text-gray-800 transition-colors"
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <div class="flex justify-center gap-6 mb-8">
      <a
        href={socialLinks.github}
        target="_blank"
        rel="noopener noreferrer"
        title="GitHub"
        aria-label="GitHub Profil öffnen"
        class="group -m-1 p-1"
      >
        <GitHub
          class="h-6 w-6 text-gray-600 transition group-hover:text-gray-800"
        />
      </a>
      <a
        href={socialLinks.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        title="LinkedIn"
        aria-label="LinkedIn Profil öffnen"
        class="group -m-1 p-1"
      >
        <LinkedIn
          class="h-6 w-6 text-gray-600 transition group-hover:text-gray-800"
        />
      </a>
    </div>

    <p class="text-center text-sm text-gray-600">
      © {currentYear} Stefan Gasser · Südtirol, Italien
    </p>
  </div>
</footer>
