---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="mb-8">
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl">
    {title}
  </h1>
  {
    subtitle && (
      <p class="mt-6 text-xl text-gray-600 leading-relaxed">{subtitle}</p>
    )
  }
</header>
